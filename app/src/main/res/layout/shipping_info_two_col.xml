<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_8"
    android:paddingTop="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_8">

    <LinearLayout
        android:id="@+id/llShippingItemType3_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvReceiverType3_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/purple_600"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/tvReceiverType3_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/purple_600"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_below="@+id/llShippingItemType3_1"
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvReceiverType3_method_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <ImageButton
            android:id="@+id/ibtnReceiverType3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvReceiverType3_deposit_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</RelativeLayout>