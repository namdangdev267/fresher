<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_item_recyclerview"
    android:paddingLeft="@dimen/dp_5"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/textview_package_size"
        style="@style/TextViewFont"
        android:text="@string/search_view"
        android:textColor="#2b3176"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edittext_package_size_content_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:hint="@string/touch_to_enter"
        android:textColorHint="#C9737373"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.33"

        />

    <EditText
        android:id="@+id/edittext_package_size_content_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:hint="@string/touch_to_enter"
        android:textColorHint="#C9737373"
        android:textSize="14dp"
        app:layout_constraintBaseline_toBaselineOf="@id/edittext_package_size_content_1"
        app:layout_constraintLeft_toRightOf="@id/edittext_package_size_content_1"
        app:layout_constraintRight_toLeftOf="@id/edittext_package_size_content_3"
        app:layout_constraintWidth_percent="0.33" />

    <EditText
        android:id="@+id/edittext_package_size_content_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:hint="@string/touch_to_enter"
        android:textColorHint="#C9737373"
        android:textSize="14dp"
        app:layout_constraintBaseline_toBaselineOf="@id/edittext_package_size_content_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.33"

        />


</androidx.constraintlayout.widget.ConstraintLayout>