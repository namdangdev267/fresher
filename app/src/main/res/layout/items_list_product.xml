<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/custom_rippel">

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_shopping_bag" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:paddingStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/ivProduct"
        android:text="@string/nameProduct_example"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tvProductId"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/tvProductName"
        android:paddingStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/ivProduct"
        android:text="@string/idProduct_example"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/tvProductId"
        android:paddingStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/ivProduct"
        android:text="@string/priceProduct_example"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/sp_18" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/rcv_boder"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>