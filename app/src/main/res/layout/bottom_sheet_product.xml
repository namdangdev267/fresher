<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_searchview"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/InforProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_18"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tvCodeProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameProduct"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_8"
            android:textSize="@dimen/textSize_18"
            tools:ignore="SpUsage" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearClickQuantity"
        android:layout_toEndOf="@id/InforProduct"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/imgRemove"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:padding="@dimen/dp_15"
            android:src="@drawable/ic_baseline_remove_circle_24"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tvCountProduct"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_size"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_18"
            tools:ignore="SpUsage" />

        <ImageView
            android:id="@+id/imgAdd"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:padding="@dimen/dp_15"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:contentDescription="@string/todo" />
    </LinearLayout>

</RelativeLayout>