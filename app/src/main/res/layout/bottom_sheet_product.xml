<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_searchview"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/InforProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Name product"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvCodeProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameProduct"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/dp_8"
            android:text="Code product"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearClickQuantity"
        android:layout_toRightOf="@id/InforProduct"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgRemove"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_remove_circle_24"/>

        <TextView
            android:id="@+id/tvCountProduct"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imgAdd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_add_circle_24"/>
    </LinearLayout>

