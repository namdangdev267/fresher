<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog">
    <LinearLayout
        android:layout_marginVertical="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_ThongTin">
        <TextView
            android:id="@+id/tv_diglog_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingHorizontal="15dp"
            />
        <TextView
            android:id="@+id/tv_diglog_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20dp"
            android:paddingHorizontal="15dp"
            android:textColor="@color/color_grey"
            android:gravity="center"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="15dp">
        <ImageButton
            android:id="@+id/imgbtn_giam_sl"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_circle_blue"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_tru"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/tv_sum_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="1"
            android:textSize="20dp"
            android:textColor="@color/color_black"/>
        <ImageButton
            android:id="@+id/imgbtn_tang_sl"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/color_white"
            android:src="@drawable/ic_cong"
            android:background="@drawable/bg_circle_blue"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/linear_ThongTin"
        android:layout_marginHorizontal="15dp"
        android:background="@color/color_grey"/>

</RelativeLayout>