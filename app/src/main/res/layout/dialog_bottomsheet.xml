<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog">
    <LinearLayout
        android:layout_marginVertical="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_ThongTin">
        <TextView
            android:id="@+id/tv_diglog_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingHorizontal="15dp"
            />
        <TextView
            android:id="@+id/tv_diglog_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20dp"
            android:paddingHorizontal="15dp"
            android:textColor="@color/color_grey"
            android:gravity="center"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="15dp">
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_circle_blue"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_tru"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="1"
            android:textSize="20dp"
            android:textColor="@color/color_black"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/color_white"
            android:src="@drawable/ic_cong"
            android:background="@drawable/bg_circle_blue"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/linear_ThongTin"
        android:layout_marginHorizontal="15dp"
        android:background="@color/color_grey"/>

    <RelativeLayout
        android:id="@+id/relative_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_1">

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="Màu sắc"
            android:textColor="@color/color_black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_color_blue"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tv_color"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_circle_blue"
            android:padding="8dp"
            android:text="Xanh"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_color_red"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tv_color"
            android:layout_toRightOf="@id/btn_color_blue"
            android:background="@drawable/bg_circle"
            android:padding="8dp"
            android:text="Đỏ"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/relative_color"
        android:layout_marginHorizontal="15dp"
        android:background="@color/color_grey"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:id="@+id/relative_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_color">

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="Size"
            android:textColor="@color/color_black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_size_s"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tv_size"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_circle_blue"
            android:padding="8dp"
            android:text="S"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_size_m"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tv_size"
            android:layout_toRightOf="@id/btn_size_s"
            android:background="@drawable/bg_circle"
            android:padding="8dp"
            android:text="M"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_size_l"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tv_size"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/btn_size_m"
            android:background="@drawable/bg_circle"
            android:padding="8dp"
            android:text="L"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/relative_size"
        android:layout_marginHorizontal="15dp"
        android:background="@color/color_grey"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:id="@+id/relative_donvi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_size">

        <TextView
            android:id="@+id/tv_donvi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="Đơn vị"
            android:textColor="@color/color_black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_donvi_cai"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tv_donvi"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_circle_blue"
            android:padding="8dp"
            android:text="Cái"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_donvi_chuc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tv_donvi"
            android:layout_toRightOf="@id/btn_donvi_cai"
            android:background="@drawable/bg_circle"
            android:padding="8dp"
            android:text="Chục"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_donvi_thung"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/tv_donvi"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/btn_donvi_chuc"
            android:background="@drawable/bg_circle"
            android:padding="8dp"
            android:text="Thùng"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/relative_donvi"
        android:layout_marginHorizontal="15dp"
        android:background="@color/white"
        android:layout_marginVertical="30dp"/>

</RelativeLayout>