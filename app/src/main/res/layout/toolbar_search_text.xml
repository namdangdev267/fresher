<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.FreshersApplication.Toolbar"
    app:contentInsetStart="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_nav"
            android:layout_width="@dimen/basic_line_height"
            android:layout_height="@dimen/basic_line_height"
            android:src="@drawable/ic_menu"
            android:background="@drawable/selector_button_round"
            android:contentDescription="@string/sample_description"
            app:tint="@color/primary_text_in_primary" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_bar_height"
            android:background="@drawable/box"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/between_element"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/between_element"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/between_element"
                android:ellipsize="end"
                android:hint="@string/input_name_code_etc"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:autofillHints="name"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_search"
                app:drawableTint="@color/secondary_text_in_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="@style/Theme.FreshersApplication.Text.BottomButton"
            tools:text="@tools:sample/cities" />
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>