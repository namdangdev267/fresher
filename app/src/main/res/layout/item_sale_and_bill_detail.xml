<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:layout_marginTop="@dimen/dp_0.1"
    android:layout_marginBottom="@dimen/dp_0.1"
    android:background="@drawable/ripple_rectangle"
    android:clickable="true"
    android:focusable="true"

    >

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_item"
        style="@style/TextViewFont"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toRightOf="@id/image_item"
        android:text="@string/search_view"
        android:textColor="#D8000000"
        android:textSize="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/id_item"
        style="@style/TextViewFont"
        android:textColor="#C9737373"
        android:textSize="@dimen/dp_14"
        android:layout_below="@id/name_item"
        android:layout_toRightOf="@id/image_item"
        android:text="@string/search_view"
        android:paddingLeft="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/price_item"
        style="@style/TextViewFont"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="#E62B3176"
        android:textSize="@dimen/dp_16"
        android:layout_toRightOf="@id/image_item"
        android:layout_below="@id/id_item"
        android:text="@string/search_view"
        android:paddingLeft="@dimen/dp_10"
        />

    <ImageView
        android:id="@+id/iv_item_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_circle"
        android:layout_toStartOf="@id/tv_item_quantity"
        android:layout_marginTop="@dimen/dp_8"
        />

    <TextView
        android:id="@+id/tv_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/iv_item_add"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/background" />

    <ImageView
        android:id="@+id/iv_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_circle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_8"

        />

    <TextView
        android:id="@+id/tv_item_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="ddddddd"
        android:layout_margin="@dimen/dp_10"
        />




</RelativeLayout>