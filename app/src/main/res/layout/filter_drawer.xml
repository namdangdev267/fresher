<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:theme="@style/Theme.FreshersApplication.Switch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AVAILABLE ITEMS (QTY > 0)"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/sw_quantity"
                app:layout_constraintStart_toEndOf="@id/sw_quantity"
                app:layout_constraintTop_toTopOf="@id/sw_quantity" />

            <TextView
                android:id="@+id/tv_grouping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="ITEM CATEGORY"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sw_quantity" />

            <Spinner
                android:id="@+id/spn_grouping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_filter_spinner"
                android:entries="@array/item_arr"
                android:padding="8dp"
                android:overlapAnchor="false"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_grouping" />

            <TextView
                android:id="@+id/tv_sorting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Sort by"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spn_grouping" />

            <RadioGroup
                android:id="@+id/rg_sorting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_sorting"
                app:layout_constraintStart_toStartOf="parent">

                <RadioButton
                    android:id="@+id/rb_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:theme="@style/Theme.FreshersApplication.Switch"/>

                <RadioButton
                    android:id="@+id/rb_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New arrival"
                    android:theme="@style/Theme.FreshersApplication.Switch"/>

                <RadioButton
                    android:id="@+id/rb_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="quantity_in_inventory"
                    android:theme="@style/Theme.FreshersApplication.Switch"/>
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/custom_background_filter"
            android:text="Clear filter"
            android:textColor="@color/background"
            android:textAllCaps="false"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/custom_background"
            android:text="Done"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>