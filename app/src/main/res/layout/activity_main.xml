<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/violet_dark"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:backgroundTint="@color/violet_dark"
            android:src="@drawable/ic_baseline_menu_24" />

        <com.example.freshermobile.SearchView
            android:layout_width="@dimen/dp_260"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dp_7"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/custom_toolbar"
            app:hint="@string/enter_to_search"
            app:imageSearch="@drawable/ic_baseline_search_24"
            app:imageSKU="@drawable/sku_icon"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_cart"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_shopping_cart_24" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@color/violet_dark"
            android:src="@drawable/ic_baseline_filter_alt_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_0">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_user_icon" />

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="fill_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_0"
                android:text="@string/customer_name"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_0">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/violet_dark"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_bang_gia" />

            <TextView
                android:id="@+id/tv_gia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:gravity="fill_vertical"
                android:text="@string/not_selected"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tach_dong"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#EFEFEF"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/user_layout">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center_vertical"
            android:theme="@style/SCBSwitch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/line_split"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tach_dong"
        tools:listitem="@layout/item_product" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_reset"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/custom_reset"
        android:rotation="90"
        android:src="@drawable/ic_baseline_loop_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/custom_tv"
        android:gravity="center"
        android:text="@string/number_0"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_reset" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginVertical="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/custom_tv"
        android:text="@string/not_selected_yet"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_number" />

</androidx.constraintlayout.widget.ConstraintLayout>