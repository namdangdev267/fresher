<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10"
    android:paddingStart="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_10"
    android:background="@drawable/bg_item_recyclerview">

    <TextView
        android:id="@+id/textview_multicontent_title1"
        style="@style/TextViewFont"
        android:text="@string/deposit_method"
        android:textColor="#2b3176"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_multicontent_title2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/dp_200"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/textview_multicontent_title2"
        style="@style/TextViewFont"
        android:textColor="#2b3176"
        android:text="@string/deposit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        />

    <TextView
        android:id="@+id/textview_multicontent_content1"
        style="@style/TextViewFont"
        android:text="@string/transfer"
        android:singleLine="true"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/imageview_multicontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/textview_multicontent_content2"
        style="@style/TextViewFont"
        android:text="@string/_0_0"
        android:singleLine="true"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/textview_multicontent_title2"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_multicontent_content1" />


</androidx.constraintlayout.widget.ConstraintLayout>