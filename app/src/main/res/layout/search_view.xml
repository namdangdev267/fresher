<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#2b3176"
            android:orientation="horizontal"
            android:weightSum="20"
            >

        <ImageView
            android:id="@+id/imageview_search_icon1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="@dimen/dp_10"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/ripple_circle"
            />

        <ImageView
            android:id="@+id/imageview_search_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_weight="2"
            android:background="@drawable/bg_rounded_left_light"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_search_24" />



        <EditText
            android:id="@+id/edittext_search_hint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_weight="9"
            android:background="@color/white"
            android:textColor="#000000"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:textSize="@dimen/dp_15" />

        <ImageView
            android:id="@+id/imageview_search_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_weight="1.5"
            android:background="@drawable/bg_rounded_right_light"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:src="@drawable/ic_barcode"
            />

        <ImageView
            android:id="@+id/imageview_search_icon2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/ripple_circle"
            android:padding="@dimen/dp_10"
            android:focusable="true"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/imageview_search_icon3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/ripple_circle"
            android:padding="@dimen/dp_10"
            android:focusable="true"
            android:clickable="true"
            />





></LinearLayout>

</merge>