<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="3.8">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glNgang1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.07" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glNgang2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.08" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glNgang3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.15" />

                    <LinearLayout
                        android:id="@+id/btnBuyMore"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_45"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@id/glNgang3"
                        app:layout_constraintEnd_toEndOf="@id/glDocCach"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glNgang2"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_15"
                            android:src="@drawable/ic_baseline_add_24"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:gravity="center|left"
                            android:text="@string/buy_more"
                            android:textColor="@color/background"
                            android:textSize="@dimen/textSize_18"
                            tools:ignore="RtlHardcoded,SpUsage" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgScan"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_qr_code_scanner_24"
                        app:layout_constraintBottom_toBottomOf="@id/glNgang3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/glDocCach"
                        app:layout_constraintTop_toTopOf="@id/glNgang2" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glDocCach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.85" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:background="@color/background_switch"
                        app:layout_constraintBottom_toBottomOf="@id/glNgang2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glNgang1" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_50"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@id/glNgang1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imgEdt"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_15"
                            android:src="@drawable/ic_baseline_person_24"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/etCustomer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:layout_marginVertical="@dimen/dp_5"
                            android:background="@null"
                            android:hint="@string/customer_name_phone_number"
                            android:lines="1"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textSize="@dimen/dp_14"
                            android:autofillHints=""
                            tools:ignore="SpUsage" />

                        <RelativeLayout
                            android:id="@+id/relativeKhongChon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgKhong"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:src="@drawable/calendar"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:layout_toEndOf="@id/imgKhong"
                                android:text="@string/none"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dp_15"
                                tools:ignore="SpUsage" />
                        </RelativeLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glViewBottom1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.91" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glViewBottom2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.92" />

                    <RelativeLayout
                        android:id="@+id/relativeReceivable"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glViewBottom2"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/imgDollar"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@drawable/dollar"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/receivable"
                            android:layout_marginStart="@dimen/dp_5"
                            android:textColor="@color/background"
                            android:textSize="@dimen/textSize_18"
                            android:layout_centerInParent="true"
                            android:layout_toEndOf="@id/imgDollar"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/tvMoneyReceivable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_toStartOf="@id/imgSwitchReceivable"
                            android:textColor="@color/background"
                            android:textSize="@dimen/textSize_18"
                            tools:ignore="RelativeOverlap,SpUsage" />

                        <ImageView
                            android:id="@+id/imgSwitchReceivable"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/angleright"
                            android:contentDescription="@string/todo" />

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:background="@color/background_switch"
                        app:layout_constraintBottom_toBottomOf="@id/glViewBottom2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glViewBottom1" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvPackage"
                        android:layout_width="@dimen/dp_0"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_height="0dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="@id/glViewBottom1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/glNgang3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_margin="@dimen/dp_8"
                android:layout_weight="0.3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/btnGoToShipFragment"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:background="@drawable/custom_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/glDoc2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imgShip"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:scaleType="fitCenter"
                            android:layout_centerInParent="true"
                            android:src="@drawable/truck"
                            android:contentDescription="@string/todo" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:background="@drawable/custom_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/glDoc1"
                        app:layout_constraintStart_toStartOf="@id/glDoc2"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:scaleType="fitCenter"
                            android:layout_centerInParent="true"
                            android:src="@drawable/gift"
                            android:contentDescription="@string/todo" />
                    </RelativeLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glDoc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.15" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/glDoc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3" />

                    <LinearLayout
                        android:id="@+id/linearQuantity"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_45"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/custom_background"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/glDoc1"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvCountPackage"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/_0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_18"
                            tools:ignore="SpUsage" />

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/tvGetPayment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/get_payment"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_18"
                            tools:ignore="SpUsage" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>