<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragments.BillDetail.BillDetailFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#2b3176"
        android:orientation="horizontal"
        android:weightSum="20"

        >

        <ImageView
            android:id="@+id/im_bill_detail_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="@dimen/dp_10"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/ic_arrow_left_24"
            />

        <TextView
            android:id="@+id/tv_bill_detail_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="12.5"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="1111"
            android:textColor="#DCFFFFFF"
            android:textSize="@dimen/dp_20" />

        <ImageView
            android:id="@+id/iv_bill_detail_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/ic_shopping_cart"
            android:padding="@dimen/dp_10"
            android:focusable="true"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/iv_bill_detail_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/ic_more_vert"
            android:padding="@dimen/dp_10"
            android:focusable="true"
            android:clickable="true"
            />

        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:weightSum="8"
        >

        <ImageView
            android:id="@+id/imageview_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_person_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:maxLength="18"
            android:text="@string/customer_information_sale_fragment"
            android:textColor="#DC8C8C8C" />

        <ImageView
            android:id="@+id/imageview_voucher"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="@string/none"
            android:textColor="#D8000000"
            android:textFontWeight="400"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8.5"
            android:orientation="horizontal"
            android:background="@drawable/ripple_rectangle"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_24"
                android:layout_weight="0.2"
                android:padding="@dimen/dp_5"
                />
            <TextView
                android:id="@+id/tv_buy_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Buy more"
                android:gravity="center_vertical"
                android:textColor="@color/background"
                android:layout_weight="8.3"
                android:textSize="@dimen/dp_15"


                />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_search_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_weight="1.5"
            android:background="@drawable/bg_rounded_right_light"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:src="@drawable/ic_barcode_dark"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_bill_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@drawable/ripple_rectangle"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_money_24"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Receivable"
            android:gravity="center_vertical"
            android:textColor="@color/background"
            android:layout_weight="8.5"
            android:textSize="@dimen/dp_15"

            />

        <TextView
            android:id="@+id/tv_bill_detail_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="50,0"
            android:gravity="center"
            android:textColor="@color/background"
            android:layout_weight="1"
            android:textSize="@dimen/dp_15"

            />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:src="@drawable/ic_arrow_right_24"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:weightSum="8"
        >

        <ImageView
            android:id="@+id/iv_bill_detail_ship"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_shipping_car"
            android:padding="13dp"
            android:background="@drawable/bg_circle_dark"
            android:layout_marginRight="@dimen/dp_5"
            />

        <ImageView
            android:id="@+id/iv_bill_detail_gift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_card_giftcard"
            android:padding="13dp"
            android:background="@drawable/bg_circle_dark"
            />


        <TextView
            android:id="@+id/tv_bill_detail_total_quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_left_dark"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            android:textFontWeight="400"

            />

        <TextView
            android:id="@+id/tv_get_payment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_weight="5"
            android:background="@drawable/bg_rounded_right_dark"
            android:gravity="center"
            android:text="Get payment"
            android:textFontWeight="400"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>



</LinearLayout>