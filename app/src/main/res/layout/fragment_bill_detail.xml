<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="sharedViewModel"
            type="com.misa.fresher.views.fragments.SharedViewModel" />

        <variable
            name="billDetailAdapter"
            type="com.misa.fresher.views.fragments.billDetail.BillDetailAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.fragments.billDetail.BillDetailFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#2b3176"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_bill_detail_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="13dp"
                android:src="@drawable/ic_arrow_left_24"
                android:background="@drawable/ripple_circle"

                />

            <TextView
                android:id="@+id/tv_bill_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="1111"
                android:textColor="#DCFFFFFF"
                android:textSize="@dimen/dp_20" />

            <ImageView
                android:id="@+id/iv_bill_detail_cart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="13dp"
                android:src="@drawable/ic_shopping_cart" />

            <ImageView
                android:id="@+id/iv_bill_detail_more"
                android:layout_width="50dp"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:focusable="true"
                android:padding="13dp"
                android:src="@drawable/ic_more_vert" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:weightSum="8">

            <ImageView
                android:id="@+id/imageview_customer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/tv_bill_detail_customer_infor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:maxLength="18"
                android:text="@string/customer_information_sale_fragment"
                android:textColor="#99000000"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:singleLine="true"
                />

            <ImageView
                android:id="@+id/imageview_voucher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_10"
                android:src="@drawable/price_policy" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="@string/none"
                android:textColor="#D8000000"
                android:textFontWeight="400" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/background_light"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="8.5"
                android:background="@drawable/ripple_rectangle"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/ic_add_24" />

                <TextView
                    android:id="@+id/tv_buy_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8.3"
                    android:gravity="center_vertical"
                    android:text="Buy more"
                    android:textColor="@color/background"
                    android:textSize="@dimen/dp_15"


                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_search_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_weight="1.5"
                android:background="@drawable/bg_rounded_right_light"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:src="@drawable/ic_barcode_dark" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_bill_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/background_light"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ripple_rectangle_stroke"
            android:orientation="horizontal"
            android:weightSum="10"
            android:clickable="true"
            android:focusable="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:src="@drawable/ic_money_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:gravity="center_vertical"
                android:text="Receivable"
                android:textColor="@color/background"
                android:textSize="@dimen/dp_15"

                />

            <TextView
                android:id="@+id/tv_bill_detail_total_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="50,0"
                android:textColor="@color/background"
                android:textSize="@dimen/dp_15"

                />

            <ImageView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_3"
                android:src="@drawable/ic_arrow_right_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            >

            <ImageView
                android:id="@+id/iv_bill_detail_ship"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_circle_dark"
                android:padding="13dp"
                android:src="@drawable/ic_shipping_car" />

            <ImageView
                android:id="@+id/iv_bill_detail_gift"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_circle_dark"
                android:padding="13dp"
                android:src="@drawable/ic_card_giftcard" />

            <LinearLayout
                android:id="@+id/ll_get_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="6"
                >

                <TextView
                    android:id="@+id/tv_bill_detail_total_quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_left_dark"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="@dimen/dp_16"

                    />

                <TextView
                    android:id="@+id/tv_get_payment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_weight="5"
                    android:background="@drawable/bg_rounded_right_dark"
                    android:gravity="center"
                    android:text="Get payment"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="@dimen/dp_16" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</layout>
