<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@color/color_blue_purple">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Widget.AppCompat.Toolbar"
        android:background="@color/color_blue_purple">
            <com.misa.fresher.views.CustomSearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:imagebutton1="@drawable/ic_search"
                app:title="Nhập tên, mã SKU,..."
                app:imagebutton2="@drawable/ic_qr_code"
                app:imagebutton3="@drawable/ic_cart"
                app:imagebutton4="@drawable/ic_filter" />
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>
    <include layout="@layout/fragment_sale" />
</LinearLayout>