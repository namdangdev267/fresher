    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/vp_delivery_info"/>-->
    <RadioGroup
        android:id="@+id/tl_delivery_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_line_height"
        android:background="@color/primary"
        android:orientation="horizontal"

        android:padding="@dimen/between_element_half"
        app:layout_constraintBottom_toTopOf="@id/vp_delivery_info"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rb_receiver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_button_tab_left"
            android:button="@null"
            android:text="@string/receiver"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rb_ship"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_button_tab_center"
            android:button="@null"
            android:text="@string/ship"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rb_package"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_button_tab_right"
            android:button="@null"
            android:text="@string/_package"
            android:textAlignment="center" />
    </RadioGroup>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_delivery_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@id/btn_save"
        app:layout_constraintTop_toBottomOf="@id/tl_delivery_info" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_line_height"
        android:layout_margin="@dimen/between_element_half"
        android:background="@drawable/selector_button"
        android:text="@string/save"
        android:textAllCaps="false"

        android:textSize="@dimen/font_size_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vp_delivery_info" />
</androidx.constraintlayout.widget.ConstraintLayout>