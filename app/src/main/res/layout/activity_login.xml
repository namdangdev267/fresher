<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_background"
        android:contentDescription="@string/sample_description"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sample_description"
                android:layout_marginTop="@dimen/between_element_quadruple"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intro_app"
                android:textColor="@color/primary_text_in_primary"
                android:textSize="@dimen/font_size_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/between_element_double"
                android:text="@string/for_sale"
                android:textColor="@color/primary_text_in_primary"
                android:textSize="@dimen/font_size_med"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/between_element_quadruple"
                android:layout_marginHorizontal="@dimen/between_element_quadruple"
                android:background="@drawable/box"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/between_element">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.FreshersApplication.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_store"
                        android:drawablePadding="@dimen/between_element"
                        android:hint="@string/shop_id"
                        android:inputType="textEmailAddress"
                        app:drawableTint="@color/primary_text_in_white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.FreshersApplication.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="@dimen/between_element"
                        android:hint="@string/username"
                        android:inputType="textEmailAddress"
                        app:drawableTint="@color/primary_text_in_white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.FreshersApplication.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="@dimen/between_element"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        app:drawableTint="@color/primary_text_in_white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Theme.FreshersApplication.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="@dimen/between_element"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        app:drawableTint="@color/primary_text_in_white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/between_element"
                    android:background="@drawable/selector_button"
                    android:text="@string/sign_in"
                    android:textAppearance="@style/Theme.FreshersApplication.Text.BottomButton"/>

                <TextView
                    android:id="@+id/btn_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/between_element"
                    android:text="@string/sign_up"
                    android:textColor="@color/secondary_text_in_white"
                    style="@style/Theme.FreshersApplication.Clickable"/>

                <TextView
                    android:id="@+id/btn_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/between_element"
                    android:text="@string/forgot_password"
                    android:textColor="@color/secondary_text_in_white"
                    style="@style/Theme.FreshersApplication.Clickable"/>

                <TextView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/between_element"
                    android:text="@string/back_to_login"
                    android:textColor="@color/secondary_text_in_white"
                    style="@style/Theme.FreshersApplication.Clickable"/>
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btn_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/between_element_8x"
                android:paddingVertical="@dimen/between_element_double"
                style="@style/Theme.FreshersApplication.Clickable"
                android:text="@string/policy"
                android:textColor="@color/primary_text_in_primary"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>