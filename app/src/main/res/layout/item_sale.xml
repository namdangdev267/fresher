<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="itemProduct"
            type="com.misa.fresher.models.ItemProduct" />

        <variable
            name="saleViewModel"
            type="com.misa.fresher.views.fragments.sale.SaleViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_0.1"
        android:layout_marginBottom="@dimen/dp_0.1"
        android:background="@drawable/ripple_rectangle_stroke"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> saleViewModel.selectProduct(itemProduct)}"
        >

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_shopping_bag"

            />

        <TextView
            android:id="@+id/name_item"
            style="@style/TextViewFont"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_toRightOf="@id/image_item"
            android:paddingLeft="@dimen/dp_10"
            android:text="@{itemProduct.name}"
            android:textColor="#D8000000"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/id_item"
            style="@style/TextViewFont"
            android:layout_below="@id/name_item"
            android:layout_toRightOf="@id/image_item"
            android:paddingLeft="@dimen/dp_10"
            android:text="@{itemProduct.idForView}"
            android:textColor="#C9737373"
            android:textSize="@dimen/dp_14"

            />

        <TextView
            android:id="@+id/price_item"
            style="@style/TextViewFont"
            android:layout_below="@id/id_item"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_toRightOf="@id/image_item"
            android:paddingLeft="@dimen/dp_10"
            android:text="@{itemProduct.priceForView}"
            android:textColor="#E62B3176"
            android:textSize="@dimen/dp_16" />
    </RelativeLayout>
</layout>

