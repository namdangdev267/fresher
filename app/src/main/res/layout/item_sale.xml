<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:layout_marginTop="@dimen/dp_0.1"
    android:layout_marginBottom="@dimen/dp_0.1"
    android:background="@drawable/ripple_rectangle"
    android:clickable="true"
    android:focusable="true"
    >

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:padding="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_item"
        style="@style/TextFont"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toRightOf="@id/image_item"
        android:text="@string/search_view"
        android:textColor="#D8000000"
        android:textSize="@dimen/dp_15"

        />

    <TextView
        android:id="@+id/id_item"
        style="@style/TextFont"
        android:textColor="#C9737373"
        android:textSize="@dimen/dp_14"
        android:layout_below="@id/name_item"
        android:layout_toRightOf="@id/image_item"
        android:text="@string/search_view"
        />

    <TextView
        android:id="@+id/price_item"
        style="@style/TextFont"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="#E62B3176"
        android:textSize="@dimen/dp_16"
        android:layout_toRightOf="@id/image_item"
        android:layout_below="@id/id_item"
        android:text="@string/search_view"
        />




</RelativeLayout>