<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/dp_10"

            >

            <Switch
                android:id="@+id/sw_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_20"
                android:theme="@style/Widget.AppCompat.CompoundButton.Switch"
                android:padding="@dimen/dp_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/tv_title_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVAILABLE ITEMS (QTY>0)"
                android:padding="@dimen/dp_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/sw_quantity"
                />

            <TextView
                android:id="@+id/tv_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="item category"
                app:layout_constraintTop_toBottomOf="@id/sw_quantity"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"

                />

            <Spinner
                android:id="@+id/spin_item_category"
                app:layout_constraintTop_toBottomOf="@id/tv_item_category"
                app:layout_constraintLeft_toLeftOf="parent"
                android:entries="@array/item_category"
                style="@style/spinner"
                />

            <TextView
                android:id="@+id/tv_sort_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sort by"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/spin_item_category"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <RadioGroup
                android:id="@+id/radio_sort_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_sort_by"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingLeft="@dimen/dp_10"
                >

                <RadioButton
                    android:id="@+id/radio_bt_name_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    />

                <RadioButton
                    android:id="@+id/radio_bt_new_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New arrival"
                    />

                <RadioButton
                    android:id="@+id/radio_bt_quantity_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity in stock"
                    />
            </RadioGroup>


            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/radio_sort_by"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <Spinner
                android:id="@+id/spin_item_color"
                app:layout_constraintTop_toBottomOf="@id/tv_color"
                app:layout_constraintLeft_toLeftOf="parent"
                android:entries="@array/color"
                style="@style/spinner"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/tv_filter_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_all_stroke"
            android:layout_margin="@dimen/dp_5"
            android:text="Clear filter"
            android:textColor="@color/background"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_filter_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_all"
            android:layout_margin="@dimen/dp_5"
            android:textColor="@color/white"
            android:text="Done"
            android:gravity="center"
            />


    </LinearLayout>

</LinearLayout>