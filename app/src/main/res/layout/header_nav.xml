<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ly_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/primary"

        android:paddingTop="@dimen/drawer_header_top"
        android:paddingHorizontal="@dimen/drawer_header_around"
        android:paddingBottom="@dimen/drawer_header_around">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            app:cardCornerRadius="1000dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_avatar"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"

            android:layout_marginStart="@dimen/margin_start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample name"
                android:textColor="@color/primary_text_in_primary"
                android:textSize="@dimen/font_size_big"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample shop"
                android:textColor="@color/primary_text_in_primary" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_line_height"
        android:background="@drawable/selector_button"
        android:text="@string/support_tele"
        android:textAllCaps="false"
        android:textColor="@color/primary_text_in_primary"
        app:icon="@drawable/ic_call"
        app:iconGravity="textStart"

        android:layout_margin="@dimen/drawer_header_around"/>
</LinearLayout>