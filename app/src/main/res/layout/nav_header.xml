<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/violet_dark"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/custom_circle_image"
            android:layout_width="@dimen/d100"
            android:layout_margin="@dimen/d25"
            android:layout_height="@dimen/d100"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/violet_dark"
            android:layout_marginEnd="@dimen/d15"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nam Dang"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/ts16"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="namfashion"
                android:textColor="@color/white"
                android:textSize="@dimen/ts16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/violet_dark"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/ts16"
            android:layout_margin="@dimen/d20"
            android:text="@string/support"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50"/>
    </LinearLayout>
</LinearLayout>