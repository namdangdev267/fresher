<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_dialog"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/dp_8"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_rectangle_stroke"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgPackage"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dp_10" />

    <LinearLayout
        android:layout_toRightOf="@id/imgPackage"
        android:id="@+id/InforProduct"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Name product"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvCodeProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameProduct"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/dp_8"
            android:text="Code product"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPriceAndType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameProduct"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/dp_8"
            android:text="Price, Type product"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearClickQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/InforProduct"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRemove"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_remove_circle_24" />

            <TextView
                android:id="@+id/tvCountProduct"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgAdd"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_add_circle_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPriceProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="@dimen/dp_15"
            android:text="Price product"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>