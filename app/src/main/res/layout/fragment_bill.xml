<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.fragments.bill.BillFragment">

    <LinearLayout
        android:id="@+id/toolbar_bill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentTop="true"
        android:background="#2b3176"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_bill_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ripple_circle"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/ic_menu_24" />

        <TextView
            android:id="@+id/tv_bill_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="List of bills"
            android:textColor="#DCFFFFFF"
            android:textSize="@dimen/dp_20" />


        <ImageView
            android:id="@+id/iv_bill_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_search_light"
            android:background="@drawable/ripple_circle"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bill_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_bill"
        android:weightSum="2">

        <Spinner
            android:id="@+id/spin_filter_day"
            style="@style/spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:entries="@array/day"
            />

        <Spinner
            android:id="@+id/spin_filter_status"
            style="@style/spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:entries="@array/status"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bill_total_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/ll_bill_filter"
        android:padding="@dimen/dp_10"
        android:background="@color/background_light"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Total"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_bill_total_quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:padding="@dimen/dp_3"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="0"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:background="@drawable/bg_rounded_all_dark_1"
            />

        <TextView
            android:id="@+id/tv_bill_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="0.0"
            android:textStyle="bold"
            android:textColor="@color/black"
            />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_bill_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/ll_bill_total_information"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/iv_bill_buy_more"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/bg_circle_dark"
        android:padding="13dp"
        android:src="@drawable/ic_shopping_cart" />
</RelativeLayout>