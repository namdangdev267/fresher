<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_item_recyclerview"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10"
    android:paddingStart="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_touch_title"
        style="@style/TextViewFont"
        android:layout_alignParentTop="true"
        android:text="@string/search_view"
        android:textColor="#2b3176" />

    <TextView
        android:paddingStart="@dimen/dp_3"
        android:id="@+id/tv_touch_require"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_touch_title"
        android:textColor="#FF0000"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textview_touch_hint_content"
        style="@style/TextViewFont"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:layout_marginTop="30dp"
        android:text="@string/search_view"
        android:textColor="#C9737373" />

    <ImageView
        android:id="@+id/img_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/todo" />

</RelativeLayout>