<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_list_bills"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bill_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purpleDark"
        app:contentInsetEnd="@dimen/pad_small"
        app:contentInsetStart="@dimen/pad_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/pad_small"
                android:background="@drawable/bg_btn_oval_violet"
                android:padding="@dimen/pad_medium"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/list_bills_fragment_name"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_extra"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn_oval_violet"
                android:padding="@dimen/pad_medium"
                android:src="@drawable/ic_search"
                app:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/pad_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_search"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="@dimen/pad_medium"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/toolbar_list_bills_search_hint"
                android:inputType="text"
                android:padding="@dimen/pad_small"
                android:textSize="@dimen/txt_medium"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_btn_round_violet"
                android:padding="@dimen/pad_small"
                android:text="Close"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Spinner
            android:id="@+id/spinner_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:overlapAnchor="false"
            android:padding="@dimen/pad_tiny" />

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:overlapAnchor="false"
            android:padding="@dimen/pad_tiny" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purpleLight"
        android:padding="@dimen/pad_large">

        <TextView
            android:id="@+id/txt_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/pad_medium"
            android:text="Total"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/txt_large"/>

        <TextView
            android:id="@+id/txt_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_total_title"
            android:background="@drawable/bg_btn_round_violet_light"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/purpleDark"
            android:textSize="@dimen/txt_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="0.000"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/txt_large"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_bill_rec_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:backgroundTint="@color/purpleDark"
        android:src="@drawable/ic_cart"
        android:tint="@color/white"
        app:useCompatPadding="true" />
</LinearLayout>