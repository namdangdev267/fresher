<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tb_list_bill"
        layout="@layout/toolbar_search_text"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_line_height"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@id/tb_list_bill">

        <Spinner
            android:id="@+id/spn_filter_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:overlapAnchor="false"/>

        <Spinner
            android:id="@+id/spn_filter_statue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:overlapAnchor="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_line_height"
        android:orientation="horizontal"
        android:background="@color/odd_line"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/between_element"

        app:layout_constraintTop_toBottomOf="@id/ll_filter">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_in_white"
            android:textStyle="bold"
            android:text="@string/total"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/between_element"
            android:background="@drawable/btn_round_normal"
            android:backgroundTint="@color/gray_400"
            android:paddingHorizontal="@dimen/between_element_half"
            android:paddingVertical="@dimen/between_element_narrow"
            android:textColor="@color/primary"
            android:textStyle="bold"
            tools:text="@tools:sample/us_zipcodes" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_in_white"
            android:textStyle="bold"
            tools:text="@tools:sample/us_phones" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_bill"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        app:layout_constraintTop_toBottomOf="@id/ll_total"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_buy_more"
        android:layout_width="@dimen/float_button_size"
        android:layout_height="@dimen/float_button_size"
        android:layout_margin="@dimen/between_element_double"
        android:src="@drawable/ic_cart"
        app:tint="@color/primary_text_in_primary"
        android:contentDescription="@string/sample_description"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>