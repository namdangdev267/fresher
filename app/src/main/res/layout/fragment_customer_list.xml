<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.customer.CustomerListFragment">

    <View
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/violet_dark"
        android:paddingTop="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/customer"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/view_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/menu">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/ic_baseline_search_24" />

        <EditText
            android:id="@+id/edt_search_customer"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/white"
            android:ellipsize="end"
            android:hint="@string/customer_name"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/sp_18" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_SKU"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/white"
            android:src="@drawable/sku_icon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_add_customer"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_add_violet_dark_24" />
    </LinearLayout>

    <View
        android:id="@+id/line_split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@+id/view_search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_customer_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_split" />

</androidx.constraintlayout.widget.ConstraintLayout>