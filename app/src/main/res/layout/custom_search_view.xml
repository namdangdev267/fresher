<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/imageview_search_icon1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_circle"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/dp_12"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/custom_searchview"
            android:weightSum="13">

            <ImageView
                android:id="@+id/imageview_search_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:contentDescription="@string/touch_to_enter"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_baseline_search_24"
                tools:ignore="NestedWeights" />

            <EditText
                android:id="@+id/edittext_search_hint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@null"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="@dimen/dp_15"
                tools:ignore="Autofill,LabelFor,SpUsage,TextFields" />

            <ImageView
                android:id="@+id/imageview_search_scan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_5"
                android:src="@drawable/ic_baseline_qr_code_scanner_24"
                tools:ignore="ContentDescription,RtlSymmetry" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageview_search_icon2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_circle"
            android:clickable="true"
            android:contentDescription="@string/touch_to_enter"
            android:focusable="true"
            android:padding="@dimen/dp_12" />

        <ImageView
            android:id="@+id/imageview_search_icon3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_circle"
            android:clickable="true"
            android:contentDescription="@string/touch_to_enter"
            android:focusable="true"
            android:padding="@dimen/dp_12" />

    </LinearLayout>

</merge>