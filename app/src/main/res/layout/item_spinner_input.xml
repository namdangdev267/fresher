<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/between_element"
    android:paddingBottom="0dp"
    android:paddingEnd="0dp"
    android:paddingStart="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/between_element"
        android:layout_marginEnd="@dimen/between_element">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_in_white"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tv_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/between_element"
            android:textColor="@color/red"
            tools:text="@tools:sample/us_phones" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spn_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/test_arr"
        android:overlapAnchor="false"/>
</LinearLayout>