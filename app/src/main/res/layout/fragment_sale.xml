<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ly_customer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_customer"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="12dp"
            android:lines="1"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:text="@string/customer_name_tele"
            android:textColor="@color/secondaryTextInWhite"
            app:drawableStartCompat="@drawable/ic_person"
            app:drawableTint="@color/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="12dp"
            android:lines="1"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:text="@string/not_selected"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_split_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/gray_200"

        app:layout_constraintTop_toBottomOf="@id/ly_customer">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.FreshersApplication.Switch"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/split_row"

            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/ly_split_row"
        app:layout_constraintBottom_toTopOf="@id/ly_cart"/>

    <LinearLayout
        android:id="@+id/ly_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_cart"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"

        android:padding="4dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="@dimen/button_in_cart"
            android:layout_height="match_parent"
            android:background="@drawable/selecter_button_round"
            android:scaleType="centerInside"

            android:src="@drawable/ic_refresh"
            android:tint="@color/white"

            android:padding="12dp"/>

        <LinearLayout
            android:id="@+id/btn_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_button"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:clickable="true"

            android:layout_marginStart="12dp"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/button_in_cart"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>

            <View
                android:id="@+id/v_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chua chon hang"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>