<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tb_sale"
            layout="@layout/toolbar_search" />

        <LinearLayout
            android:id="@+id/ll_customer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/basic_line_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customer"
                style="@style/Theme.FreshersApplication.ClickableItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/between_element"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/customer_name_tele"
                android:paddingStart="@dimen/between_element"
                android:paddingEnd="@dimen/between_element_half"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/primary_text_in_white"
                app:drawableStartCompat="@drawable/ic_person"
                app:drawableTint="@color/primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/between_element"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingStart="@dimen/between_element_half"
                android:paddingEnd="@dimen/between_element"
                android:text="@string/not_selected"
                android:textColor="@color/black"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_split_row"
            android:layout_width="match_parent"
            android:layout_height="@dimen/basic_line_height"
            android:background="@color/odd_line"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/between_element"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/between_element"
                android:text="@string/split_row" />
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swp_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <LinearLayout
            android:id="@+id/ll_cart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_line_height"
            android:orientation="horizontal"
            android:padding="@dimen/between_element_half">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="@dimen/basic_line_height"
                android:layout_height="match_parent"
                android:background="@drawable/selector_button_round"
                android:padding="@dimen/icon_padding"
                android:scaleType="centerInside"
                android:src="@drawable/ic_refresh"
                android:tint="@drawable/selector_button_text_color" />

            <LinearLayout
                android:id="@+id/btn_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/between_element"
                android:layout_weight="1"
                android:background="@drawable/selector_button"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="@dimen/basic_line_height"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAppearance="@style/Theme.FreshersApplication.Text.BottomButton"
                    tools:text="@tools:sample/us_zipcodes" />

                <View
                    android:id="@+id/v_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAppearance="@style/Theme.FreshersApplication.Text.BottomButton"
                    tools:text="@tools:sample/lorem" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="?attr/actionBarSize"
        android:fitsSystemWindows="true" >

        <include
            android:id="@+id/ll_filter"
            layout="@layout/drawer_filter"/>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>