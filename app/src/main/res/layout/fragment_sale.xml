<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragments.Sale.SaleFragment"
    android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="8"
            >

            <ImageView
                android:id="@+id/customer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/ic_person_24" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="@string/customer_information_sale_fragment"
                android:textColor="#8C8C8C"

                />

            <ImageView
                android:id="@+id/voucher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="None"
                android:textColor="#D8000000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="#ECEBEB"
            >

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:theme="@style/Widget.AppCompat.CompoundButton.Switch"
                android:padding="5dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="Split row"


                android:textColor="#99000000" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="#F1F1F1"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#F1F1F1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="8"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_refresh"
                android:padding="10dp"
                android:background="@drawable/bg_circle_light"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_left"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="0"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="#99000000"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="6"
                android:background="@drawable/bg_rounded_right"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Not yet selected item"
                android:textColor="#99000000"
                android:textSize="16dp" />
        </LinearLayout>



</LinearLayout>