<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragments.Sale.SaleFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#2b3176"
        android:orientation="horizontal"
        android:weightSum="20"
        >

        <ImageView
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_menu_24"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/ripple_circle"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_weight="2"
            android:background="@drawable/bg_rounded_left_light"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_search_24" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_weight="9"
            android:background="@color/white"
            android:src="@drawable/ic_barcode"
            android:hint="@string/search_view"
            android:textColor="#8C8C8C"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:textSize="@dimen/dp_15" />

        <ImageView
            android:id="@+id/scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_weight="1.5"
            android:background="@drawable/bg_rounded_right_light"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:src="@drawable/ic_barcode"
            />

        <ImageView
            android:id="@+id/imageview_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/ripple_circle"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_shopping_cart"
            android:focusable="true"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/imageview_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/ripple_circle"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_filter_24"
            android:focusable="true"
            android:clickable="true"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:weightSum="8"
            >

            <ImageView
                android:id="@+id/imageview_customer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_person_24" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:maxLength="18"
                android:text="@string/customer_information_sale_fragment"
                android:textColor="#DC8C8C8C" />

            <ImageView
                android:id="@+id/imageview_voucher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="@string/none"
                android:textColor="#D8000000"
                android:textFontWeight="400"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:background="#ECEBEB"
            >

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_20"
                android:theme="@style/Widget.AppCompat.CompoundButton.Switch"
                android:padding="@dimen/dp_5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="@string/split_row"
                android:textFontWeight="400"
                android:textColor="#99000000" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_sale_fragment"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="#F1F1F1"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.2"
            android:background="#F1F1F1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            android:weightSum="8"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_refresh"
                android:padding="@dimen/dp_10"
                android:background="@drawable/bg_circle_light"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/bg_rounded_left"
                android:gravity="center"
                android:text="0"
                android:textColor="#99000000"
                android:textSize="@dimen/dp_16"
                android:textFontWeight="400"

                />

            <TextView
                android:id="@+id/textview_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_weight="6"
                android:background="@drawable/bg_rounded_right"
                android:gravity="center"
                android:text="@string/not_yet_selected_item"
                android:textFontWeight="400"
                android:textColor="#99000000"
                android:textSize="@dimen/dp_16" />
        </LinearLayout>



</LinearLayout>