<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.sale.SaleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#2b3176"
            android:orientation="horizontal">

            <com.misa.fresher.views.customViews.CustomSearchView
                android:id="@+id/search_view_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:icon1="@drawable/ic_menu_24"
                app:icon2="@drawable/ic_shopping_cart"
                app:icon3="@drawable/ic_filter_24"
                app:title="@string/search_view" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:weightSum="8">

            <ImageView
                android:id="@+id/imageview_customer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_person_24" />

            <TextView
                android:id="@+id/tv_infor_customer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:maxLength="18"
                android:text="@string/customer_information_sale_fragment"
                android:textColor="#99000000"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:singleLine="true"
                />

            <ImageView
                android:id="@+id/imageview_voucher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="@string/none"
                android:textColor="#D8000000"
                android:textFontWeight="400" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4">

            <Switch
                android:id="@+id/sw_"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_20"
                android:theme="@style/Widget.AppCompat.CompoundButton.Switch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="@string/split_row"
                android:textColor="#99000000"
                android:textFontWeight="400" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_sale_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.2"
            android:background="#F1F1F1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            >

            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_circle_light"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_refresh" />

            <LinearLayout
                android:id="@+id/ll_get_bill_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="7"
                >

                <TextView
                    android:id="@+id/tv_quantity_item_selected"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_left"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="@dimen/dp_16"

                    />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_weight="6"
                    android:background="@drawable/bg_rounded_right"
                    android:gravity="center"
                    android:text="@string/not_yet_selected_item"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="@dimen/dp_16" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="0dp"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/layout_filter"
            layout="@layout/drawer_filter" />
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>