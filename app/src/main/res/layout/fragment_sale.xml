<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_customer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_line_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/between_element"
            android:lines="1"
            android:ellipsize="end"
            android:text="@string/customer_name_tele"
            android:textColor="@color/secondary_text_in_white"
            app:drawableStartCompat="@drawable/ic_person"
            app:drawableTint="@color/primary"

            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/between_element_half"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/between_element"
            android:lines="1"
            android:text="@string/not_selected"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="@color/primary"

            android:layout_marginStart="@dimen/between_element_half"
            android:layout_marginEnd="@dimen/margin_end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_split_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/odd_line"

        app:layout_constraintTop_toBottomOf="@id/ll_customer">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.FreshersApplication.Switch"

            android:layout_marginStart="@dimen/margin_start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/split_row"

            android:layout_marginStart="@dimen/between_element"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/ll_split_row"
        app:layout_constraintBottom_toTopOf="@id/ll_cart"/>

    <LinearLayout
        android:id="@+id/ll_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_line_height"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/between_element_half">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="@dimen/basic_line_height"
            android:layout_height="match_parent"
            android:background="@drawable/selecter_button_round"
            android:scaleType="centerInside"
            android:src="@drawable/ic_refresh"
            android:tint="@color/white"
            android:padding="12dp"/>

        <LinearLayout
            android:id="@+id/btn_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_button"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:clickable="true"

            android:layout_marginStart="@dimen/between_element"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/basic_line_height"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="@dimen/font_size_big"
                android:textColor="@color/white"
                android:gravity="center"/>

            <View
                android:id="@+id/v_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chua chon hang"
                android:textSize="@dimen/font_size_big"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>