<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tb_sale"
        layout="@layout/toolbar_search"

        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_customer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_line_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@id/tb_sale">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/between_element_half"
            android:layout_weight="1"
            android:drawablePadding="@dimen/between_element"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/customer_name_tele"
            android:textColor="@color/secondary_text_in_white"
            app:drawableStartCompat="@drawable/ic_person"
            app:drawableTint="@color/primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/between_element_half"
            android:layout_marginEnd="@dimen/margin_end"
            android:layout_weight="1"
            android:drawablePadding="@dimen/between_element"
            android:lines="1"
            android:text="@string/not_selected"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="@color/primary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_split_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/odd_line"
        android:gravity="center_vertical"

        app:layout_constraintTop_toBottomOf="@id/ll_customer">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start"
            android:theme="@style/Theme.FreshersApplication.Switch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/between_element"
            android:text="@string/split_row" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_product"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@id/ll_bill"
        app:layout_constraintTop_toBottomOf="@id/ll_split_row" />

    <LinearLayout
        android:id="@+id/ll_bill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_line_height"
        android:orientation="horizontal"

        android:padding="@dimen/between_element_half"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="@dimen/basic_line_height"
            android:layout_height="match_parent"
            android:background="@drawable/selecter_button_round"
            android:padding="@dimen/icon_padding"
            android:scaleType="centerInside"
            android:src="@drawable/ic_refresh"
            android:tint="@color/white" />

        <LinearLayout
            android:id="@+id/btn_bill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/between_element"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/basic_line_height"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_big" />

            <View
                android:id="@+id/v_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Chua chon hang"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_big" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>