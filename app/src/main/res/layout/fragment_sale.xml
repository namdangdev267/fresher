<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.sale.SaleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background"
            android:orientation="horizontal">

            <com.misa.fresher.ui.customview.CustomSearchView
                android:id="@+id/searchviewSale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:icon1="@drawable/ic_baseline_menu_24"
                app:icon2="@drawable/ic_baseline_shopping_cart_24"
                app:icon3="@drawable/ic_baseline_filter_alt_24"
                app:title="@string/search_view" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:weightSum="8">

            <ImageView
                android:id="@+id/imgEdt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_user_blue"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="marquee"
                android:focusable="true"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/customer_name_phone_number"
                android:textColor="#99000000" />

            <ImageView
                android:id="@+id/imgKhong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@drawable/ic_price_policy"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="@string/none"
                android:textColor="#D8000000"
                android:textFontWeight="400"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/background_switch"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:layout_gravity="center"
                android:paddingStart="@dimen/dp_20"
                android:theme="@style/Widget.AppCompat.CompoundButton.Switch"
                android:thumb="@drawable/thumb_custom"
                app:track="@drawable/track_custom"
                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="Split row"
                android:textColor="#99000000"
                android:textFontWeight="500"
                tools:ignore="HardcodedText,UnusedAttribute" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvProduct"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.2"
            android:background="#F1F1F1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:id="@+id/btnRefresh"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:background="@drawable/custom_button_none"
                android:padding="@dimen/dp_10"
                android:src="@drawable/refresh"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/linearQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_background_none"
                android:weightSum="7">

                <TextView
                    android:id="@+id/tvCountProduct"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_18"
                    tools:ignore="SpUsage" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tvBillProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/not_selected_item"
                    android:textColor="@color/SwitchCompat"
                    android:textSize="@dimen/textSize_18"
                    tools:ignore="SpUsage" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="?attr/actionBarSize"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/filterDrawer"
            layout="@layout/filter_drawer" />
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>