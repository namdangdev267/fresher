<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_BillName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/tv_BillMa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_BillName"
        android:text="1234"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/tv_BillPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_BillMa"
        android:layout_marginLeft="8dp"
        android:text="1234"
        android:textColor="@color/color_black"
        android:textSize="20sp" />
    <View
        android:layout_below="@id/tv_BillPrice"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        android:background="@color/color_grey_white"/>

    <ImageButton
        android:id="@+id/imgbtn_cong_amount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_circle_blue"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cong" />

    <ImageButton
        android:id="@+id/imgbtn_tru_amount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/tv_amount"
        android:background="@drawable/bg_circle_blue"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tru" />

    <TextView
        android:id="@+id/tv_SumPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgbtn_cong_amount"
        android:layout_alignParentRight="true"
        android:text="SumPrice"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imgbtn_cong_amount"
        android:text="11"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="5dp"/>

</RelativeLayout>