<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_2"
    android:layout_marginBottom="@dimen/dp_2"
    android:background="@drawable/ripple_rectangle_stroke"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_bill_infor_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:text="@string/no_infor_user"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bill_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/iv_bill_show_more"
        android:paddingEnd="@dimen/dp_8"
        android:textColor="@color/black"
        tools:ignore="RelativeOverlap,RtlSymmetry" />

    <ImageView
        android:id="@+id/iv_bill_show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:contentDescription="@string/todo" />
</RelativeLayout>