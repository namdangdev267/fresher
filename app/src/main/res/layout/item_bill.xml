<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemBill"
            type="com.misa.fresher.models.ItemBill" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_0.1"
        android:layout_marginBottom="@dimen/dp_0.1"
        android:background="@drawable/ripple_rectangle_stroke"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_above="@id/tv_bill_infor_ship"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:text="@{itemBill.idForView}"
            />

        <TextView
            android:id="@+id/tv_bill_infor_ship"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="top"
            android:text="@{itemBill.infoShipForView}"
            android:textColor="@{itemBill.colorInfoShipForView}" />

        <TextView
            android:id="@+id/tv_bill_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_bill_show_more"
            android:gravity="center"
            android:paddingRight="@dimen/dp_5"
            android:text="@{itemBill.billPriceForList}"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_bill_show_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_right_24"

            />
    </RelativeLayout>


</layout>
