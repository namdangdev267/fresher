<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewFont">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextFontSelect">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">Touch to select</item>
    </style>

    <style name="EditTextFontEnter">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">Touch to enter</item>
    </style>

    <style name="ButtonFont">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LinearLayout_Bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_55</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:weightSum">8</item>
    </style>

    <style name="tab_layout"
        parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabSelectedTextColor">#2b3176</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/bg_tablayout</item>

    </style>

</resources>