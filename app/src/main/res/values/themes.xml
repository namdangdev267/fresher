    <style name="Theme.FreshersApplication.Toolbar" parent="Theme.FreshersApplication">
        <item name="android:textColorPrimary">@color/primary_text_in_primary</item>
        <item name="android:textColorSecondary">@color/primary_text_in_primary</item>
<!--        <item name="android:actionMenuTextColor">@color/primary_text_in_white</item>-->
<!--        <item name="actionMenuTextColor">@color/primary_text_in_white</item>-->
        <item name="android:itemTextAppearance">@style/Theme.FreshersApplication.Toolbar.TextItem</item>
    </style>

    <style name="Theme.FreshersApplication.Toolbar.TextItem" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/primary_text_in_white</item>
    </style>

    <style name="Theme.FreshersApplication.Nav.TextItem" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/primary_text_in_white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.FreshersApplication.TabText" parent="Theme.FreshersApplication">
        <item name="android:textSize">@dimen/font_size_normal</item>
