<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreshersApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FreshersApplication.Toolbar" parent="Theme.FreshersApplication">
        <item name="android:textColorPrimary">@color/primary_text_in_primary</item>
        <item name="android:textColorSecondary">@color/primary_text_in_primary</item>
        <item name="android:itemTextAppearance">@style/Theme.FreshersApplication.Toolbar.TextItem</item>
        <item name="android:background">@color/primary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Theme.FreshersApplication.Toolbar.TextItem" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/primary_text_in_white</item>
    </style>

    <style name="Theme.FreshersApplication.BottomDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:layout_margin">@dimen/between_element_narrow</item>
    </style>

    <style name="Theme.FreshersApplication.TabText" parent="Theme.FreshersApplication">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="Theme.FreshersApplication.Text" parent="TextAppearance.Material3.BodyMedium"/>

    <style name="Theme.FreshersApplication.Text.Bold" parent="Theme.FreshersApplication.Text">
        <item name="android:textColor">@color/primary_text_in_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.FreshersApplication.Text.BottomButton" parent="Theme.FreshersApplication.Text">
        <item name="android:textColor">@drawable/selector_button_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.FreshersApplication.Text.Bold.Cap" parent="Theme.FreshersApplication.Text.Bold">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.FreshersApplication.ClickableItem" parent="Theme.FreshersApplication.Clickable">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.FreshersApplication.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Theme.FreshersApplication.TextInputLayout">
        <item name="endIconMode">clear_text</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>