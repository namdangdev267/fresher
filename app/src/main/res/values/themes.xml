<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FreshersApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purpleDark</item>
        <item name="colorPrimaryVariant">@color/purpleDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="drawerArrowStyle">@style/Theme.FreshersApplication.DrawerArrowStyle</item>

        <item name="colorControlActivated">@color/purpleDark</item>

        <item name="toolbarStyle">@style/Theme.FreshersApplication.ToolbarStyle</item>

        <item name="bottomSheetDialogTheme">@style/Theme.FreshersApplication.BottomSheetDialogTheme</item>
    </style>

    <style name="Theme.FreshersApplication.ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.FreshersApplication.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.FreshersApplication.BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:layout_margin">1dp</item>
        <item name="bottomSheetStyle">@style/Theme.FreshersApplication.BottomSheetModalStyle</item>
    </style>
    <style name="Theme.FreshersApplication.BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>