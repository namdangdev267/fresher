<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.delivery.OrderDetailFragment">

    <View
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/violet_dark"
        android:paddingTop="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_cart"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        app:layout_constraintEnd_toStartOf="@id/button_menu_option"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_menu_option"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_0">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_user_outline"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_outline_24" />

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="fill_vertical"
                android:hint="@string/customer_name"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_0">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_table_price"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_assignment_24" />

            <TextView
                android:id="@+id/text_table_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:text="@string/not_selected"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line_split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@+id/user_layout" />

    <View
        android:id="@+id/view_add_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/line_split" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_buy_more"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@drawable/ic_baseline_add_violet_dark_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_split" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:text="@string/buy_more"
        android:textColor="@color/violet_dark"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toEndOf="@id/image_buy_more"
        app:layout_constraintTop_toBottomOf="@id/line_split" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_SKU"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/sku_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_split" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_order_detail_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toTopOf="@id/line_split2"
        app:layout_constraintTop_toBottomOf="@id/view_add_order"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="15dp"
        tools:listitem="@layout/item_order_detail" />

    <View
        android:id="@+id/line_split2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@+id/view_total" />

    <View
        android:id="@+id/view_total"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/view_footer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_dollar"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@drawable/ic_baseline_attach_money_24"
        app:layout_constraintBottom_toTopOf="@id/view_footer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_money_receivable"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_10"
        android:text="@string/money_receivable"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@id/view_footer"
        app:layout_constraintStart_toEndOf="@id/image_dollar" />

    <TextView
        android:id="@+id/text_total_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="@string/number_0"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@id/view_footer"
        app:layout_constraintEnd_toStartOf="@id/image_arrow_right" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintBottom_toTopOf="@id/view_footer"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_delivery_info"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/oval_button_violet"
        android:src="@drawable/ic_baseline_shipping_car_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_promotion"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/oval_button_violet"
        android:src="@drawable/ic_baseline_card_giftcard_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_delivery_info" />

    <TextView
        android:id="@+id/text_total_amount"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_30"
        android:background="@drawable/rectangle_button_violet"
        android:gravity="center"
        android:text="@string/number_0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_promotion" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cash"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_50"
        android:layout_marginVertical="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/rectangle_button_violet"
        android:text="@string/cash"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_total_amount" />
</androidx.constraintlayout.widget.ConstraintLayout>